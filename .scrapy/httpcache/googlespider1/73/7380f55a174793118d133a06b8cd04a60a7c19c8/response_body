    				str+=getStandardDocumentHeadline(autoList.items[i].headlines.items)+"</button>";
 				}
    		}else if(data[i][0]=="manualList" && data[i][1]!=null){
    			manualList = data[i][1];
    			for(i=0;i<manualList.manualItems.items.length;i++){
    				str+="<button type='button' class='list-group-item'onclick='location.href=\"/article/"+manualList.manualItems.items[i].id+"/"+encodeURI(getUrlHeadline(manualList.manualItems.items[i].headline))+"\";'>";
    				str+=manualList.manualItems.items[i].headline+"</button>";
 				}
    		}
    	}
    	if(data[0][1]!=null || data[1][1]!=null){
        	$("#latestNewsTitle").html("<h2>最新內容</h2>");
        }
        break;
    case "special":
