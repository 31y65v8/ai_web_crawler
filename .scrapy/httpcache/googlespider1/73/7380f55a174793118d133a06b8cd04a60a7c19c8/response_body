			$("#editorRecommandTitle").html("<h2>編輯推介</h2> ");
		}
        break;
    case "news":
    	var manualList;
    	var autoList;
    	for(i=0;i<data.length;i++){
    		if(data[i][0]=="autoList" && data[i][1]!=null){
    			autoList = data[i][1];
    			for(i=0;i<autoList.items.length;i++){
