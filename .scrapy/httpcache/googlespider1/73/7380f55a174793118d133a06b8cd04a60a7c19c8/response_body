	<script>
		document.addEventListener("DOMContentLoaded", function() {
			  function scrollToSection(section) {
			  const targetId = section.getAttribute("href");
			  const targetElement = document.getElementById(targetId.slice(1));
			  if (targetElement) {
			  	targetElement.style.cssText += 'scroll-margin-top:5.2rem';
			  }
			}

			// Add click event listener to all links that start with "#mcetoc_"
			const links = document.querySelectorAll('a[href^="#mcetoc_"]');
			if (jQuery(window).width() < 768) {
				links.forEach(link => scrollToSection(link));
			}
		});
	</script>
	<!-- End of Handle sticky header -->

