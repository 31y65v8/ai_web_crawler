				function getUrl(e){
						return $('.'+e.target.className).attr('href')
				}
				var share_url = window.location.href;
				share_url = share_url.substring(0, share_url.lastIndexOf("/"))
				function addUtmToUrl(share_data) {
					var old_url = share_data.url;
					if (share_data.serviceCode == "facebook") {
						old_url = share_url + "?utm_source=facebook_share&utm_medium=share&utm_content=ez";
					} else if (share_data.serviceCode == "whatsapp") {
						old_url = share_url +  "?utm_source=whatsapp_share&utm_medium=share&utm_content=ez";
					} else if (share_data.serviceCode == "line") {
						old_url = share_url + "?utm_source=line_share&utm_medium=share&utm_content=ez";
					} else {
						old_url = share_url + "?utm_source=clipboard_share&utm_medium=share&utm_content=ez";
					}
					var new_url = old_url;
					return {
						url: new_url,
					};
				}
				a2a_config.callbacks = a2a_config.callbacks || [];
				a2a_config.callbacks.push({
					share: addUtmToUrl
				});

				a2a_config.templates = a2a_config.templates || {};
				a2a_config.templates.whatsapp = {
					text: "AMRO 報告：香港約 X 成工作崗位將被 AI 取代 " + " | " + share_url + "?utm_source=whatsapp_share&utm_medium=share&utm_content=ez" + "  \u3010\u570D\u7210\uD83D\uDCAC\u3011\u300A\u793E\u7FA4\u300B\u96C6\u5408\u5168\u7403\u65C5\u904A\u653B\u7565\u3001\u7F8E\u98DF\u751F\u6D3B\u4E3B\u984C\u8207\u4EBA\u6C23\u71B1\u8A71\uFF01\u7ACB\u5373\u5165\u569F\u5C55\u958B\u6FC0\u70C8\u8A0E\u8AD6 \r\n\u25B6 https:\/\/bit.ly\/4cK2ZpV"
