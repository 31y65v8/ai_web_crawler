<script>
function initializeGMap(lat, long) {
	 	 // The location of Uluru

	 	const uluru = { lat: -25.344, lng: 131.031 };
		var location = { lat: +lat, lng: +long};
		  // The map, centered at Uluru
		  const map = new google.maps.Map(document.getElementById("map_canvas"), {
			zoom: 16,
			center: location,
		  });

		  // The marker, positioned at Uluru
		  const marker = new google.maps.Marker({
			position: location,
			map: map,
		  });
	}
$( document ).ready(function() {

	
	
	var position = $(window).scrollTop(); 

	$(window).scroll(function() {
	    var scroll = $(window).scrollTop();
	    $('video[id*=native_hls]').each(function() {
	        if ($(this).visible() == false) {
	   			if (!$(this)[0].paused){
		            $(this)[0].pause();
		            console.log('pause');
	   			}
	        } else {
	            if(scroll > position) {
		   			if ($(this)[0].paused){
			            $(this)[0].play();
			            console.log('play');
		   			}
	                console.log('scrollDown');
	            }
	        }
	    })
	    position = scroll;
	})
});
</script>

<script>
	var lastKnownScrollPosition = 0;
	function ulVideo() {
	    var ulvideos = document.querySelectorAll('.ulvideo');
	    if (ulvideos.length) {
	    	console.log("ulVideo");
	        for (var index = 0; index < ulvideos.length; index++) {
	            var element = ulvideos[index];
	            if (!element.getAttribute('loaded')) {
	                var videoNode = element.querySelector('video');
	
	                var player = videojs(videoNode, {
	                    language: 'zh-TW',
	                    controlBar: {
	                        volumePanel: {
	                            inline: false
	                        },
	                        subsCapsButton: false,
	                        pictureInPictureToggle: false,
	                    },
	                    html5: {
	                        vhs: {
	                            overrideNative: !videojs.browser.IS_SAFARI
	                        },
	                        nativeAudioTracks: false,
	                        nativeVideoTracks: false
	                    }
	                });
	                var contentId = 20029773;
					var videoId = videoNode.getAttribute("data-id");
					var formalTags = videoNode.getAttribute("data-formalTags").replaceAll(",", "%2C");
					var section = videoNode.getAttribute("data-section");
					//var audienceEncoded = audience.replaceAll(",", "%2C");
					var title = "AMRO 報告：香港約 X 成工作崗位將被 AI 取代";
					var pubDate = videoNode.getAttribute("data-publish-date");
					var audienceEncoded = "123";
	                if (index == 0 && typeof player.ima === "function") {
	                    var options = {
						adTagUrl: 'https://pubads.g.doubleclick.net/gampad/ads?iu=/183518426/ezone2_WebRP_Video_PreRoll&description_url=' + encodeURI(window.location.href) + '&tfcd=0&npa=0&sz=640x480%7C640x360%7C400x300&gdfp_req=1&output=vast&unviewed_position_start=1&env=vp&impl=s&vpmute=1&correlator=' + Math.round(Math.random() * 10000000000)
						+ '&cust_params=videoId%3D$' + videoId + '%26audience%3D' + audienceEncoded + '%26formal_tag%3D' + formalTags + '%26section%3D' + section + '%26live%3Dfalse',
	                        locale: 'zh_hk',
	                        adLabel: '廣告',
	                        // adWillAutoplay: true, 
	                        // adWillPlayMuted: false
	                    };
	
	                    player.ima(options);
	                    player.ima.initializeAdDisplayContainer();
	                    // Bypass settings deprecation checking
	                    player.ima.controller.setSetting('adWillAutoplay', true);
	                    player.ima.controller.setSetting('adWillPlayMuted', false);
	                }
					const ga4EventModel = {
						video: {
							content: {id:videoId},
							program: section == null?"NA":section,
							duration: undefined,
							title: title==null?"NA":title,
							publishdate: pubDate,
						},
						content: { id: contentId == null?"NA":contentId ,type:'video'},
						category: formalTags == null?"NA":formalTags,
						pagename: title == null ?"NA":title,
						screen: "article_detail",
					};
					videoTracking(player,ga4EventModel)
	                // player.httpSourceSelector({
	                //     default: 'auto'
	                // })
	
	                element.setAttribute('loaded', true);
	            }
	        }
	        window.matomoMediaAnalyticsAsyncInit();
	    }
	}
		
	function autoPlayVideoHandler() {
	    if (!document.pictureInPictureElement) {
	        var allPlayers1 = videojs.getAllPlayers();
	        for (var index1 = 0; index1 < allPlayers1.length; index1++) {
	            var player = allPlayers1[index1];
	            var container = player.contentEl();
	            var bound = container.getBoundingClientRect();
	            if (bound.top >= 0 && bound.left >= 0 && bound.bottom <= (window.innerHeight || document.documentElement.clientHeight) && bound.right <= (window.innerWidth || document.documentElement.clientWidth)) {
	                if (window.pageYOffset > lastKnownScrollPosition && !container.getAttribute('autoplayed')) {
	                    if (typeof player.ads === 'object' && player.ads.isAdPlaying()) {
	                        player.ima.resumeAd();
	                    } else {
	                        var startPlayPromise = player.play();
	                        if (startPlayPromise !== undefined) {
	                            startPlayPromise.then(function (player) {
	                                var allPlayers2 = videojs.getAllPlayers();
	                                for (var index2 = 0; index2 < allPlayers2.length; index2++) {
	                                    var element = allPlayers2[index2];
	                                    if (element.id() != player.id()) {
	                                        if (!element.paused()) {
	                                            element.pause();
	                                        } else if (typeof element.ima === 'object' && element.ima.controller.sdkImpl.isAdPlaying()) {
	                                            element.ima.pauseAd();
	                                        }
	                                    }
	                                }
	                            }).catch(function (error) {
	                                // console.error(error)
	                                // alert(error.name + ": " + error.message)
	                                if (error.name === "NotAllowedError") {
	
	                                } else {
	
	                                }
	                            });
	                        }
	                    }
	                    container.setAttribute('autoplayed', true);
	                }
	            } else {
	                if (!player.paused()) {
	                    player.pause();
	                } else if (typeof player.ima === 'object' && player.ima.controller.sdkImpl.isAdPlaying()) {
	                    player.ima.pauseAd();
	                }
	                container.removeAttribute('autoplayed');
	            }
	        }
	    }
	    lastKnownScrollPosition = window.pageYOffset;
	}
	console.log("scroll");
	document.addEventListener('scroll', autoPlayVideoHandler);
	$( document ).ready(function() {
		ulVideo();
		autoPlayVideoHandler();
	});
	
</script>
