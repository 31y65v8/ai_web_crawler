	<script>
		function getCookie(key) {
			var ck = document.cookie.split(';');
			for (var i = 0; i < ck.length; i++) {
				var item = ck[i].replace(/^[\s\uFEFF\xA0]+|[\s\uFEFF\xA0]+$/g, '');
				if ((new RegExp('^' + key + '=')).test(item)) {
					return item.replace(/^[^=]+=/, '');
				}
			}
			return undefined;
		}
		var audience = getCookie('hket_tm');
		if (audience != null) {
			var audienceValueArray = audience.split(',');
			if(audienceValueArray.length >1){
				audienceValueArray.shift();
				googletag.cmd.push(function() {
					googletag.pubads().setTargeting("audience", audienceValueArray);
				});
			}
		}
	</script>
	
