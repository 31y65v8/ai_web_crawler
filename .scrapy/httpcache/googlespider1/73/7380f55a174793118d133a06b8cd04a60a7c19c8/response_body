  var delay = function(fn, wait, immediate){
    if(window.timeout) return;
    var later = function(){
      if(typeof fn === 'function') fn();
        clearTimeout(window.timeout); window.timeout = null;
    };
    if (!window.timeout) {
      window.timeout = setTimeout(later, wait);
    }
  }
    
  function winSize(){
    if (jQuery(window).width() >= 1200) {
      return 'desktop';
    }
    else if (jQuery(window).width() >= 925) {
    	return 'desktop2';
    }
    else if (jQuery(window).width() >= 768) {
    	return 'tablet';
    } else {
      return 'mobile';
    }
  }

$(document).ready(function () {

  	setUpSectionFirstAd();
   	var windowWidth = $(window).width();
	var size = winSize();
	
    // Resize Event
    $(window).resize(function(){

        // Check window width has actually changed and it's not just iOS triggering a resize event on scroll
        if ($(window).width() != windowWidth) {

            // Update the window width for next time
            windowWidth = $(window).width();

            // Do stuff here
            delay(function(){
      			setUpSectionFirstAd();		
      			for(i=0;i<window.gptAdSlots.length;i++){
						googletag.pubads().refresh([window.gptAdSlots[i]]);
					}
      			if(window.articleGptAdSlots!=null && window.articleGptAdSlots.length>0){
					for(i=0;i<window.articleGptAdSlots.length;i++){
						googletag.pubads().refresh([window.articleGptAdSlots[i]]);
					}
      			}			
    			}, 500);

        }

        // Otherwise do nothing

    });
});

function setUpSectionFirstAd(){
	var size = winSize();
	if(size != 'desktop'){
      	$("#firstAdSection").css('display','block');
      }else{
      	$("#firstAdSection").css('display','none');
      }
}

