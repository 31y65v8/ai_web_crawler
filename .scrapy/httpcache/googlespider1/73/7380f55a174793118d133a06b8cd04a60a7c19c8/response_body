	<script>
	function downloadfancybox() {
		var splashlink = document.createElement( "link" );
		splashlink.href = "/css/dfp/style.splash.css";
		splashlink.type = "text/css";
		splashlink.rel = "stylesheet";
		splashlink.media = "screen";
		document.head.appendChild(splashlink);
		var fancyboxlink = document.createElement( "link" );
		fancyboxlink.href = "/css/dfp/jquery.fancybox.css";
		fancyboxlink.type = "text/css";
		fancyboxlink.rel = "stylesheet";
		fancyboxlink.media = "screen";
		document.head.appendChild(fancyboxlink);
    	var fancyboxmin = document.createElement("script");
    	fancyboxmin.src = "/js/dfp/jquery.fancybox.min.js";
    	document.head.appendChild(fancyboxmin);
    	var facyboxdfp = document.createElement("script");
    	facyboxdfp.src = "/js/dfp/fancybox-dfp.js";
    	document.head.appendChild(facyboxdfp);
    }
    if (jQuery(window).width() <= 768) {
    	downloadfancybox();
    }
	</script>

