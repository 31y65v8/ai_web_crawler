<script>
window.addEventListener('load', function() {
	var currentItem = $('.infinite-item:last-child .article');
	if (currentItem != null) {
	    var urlTitle = currentItem.attr("data-seourltitle").trim();
	    if (urlTitle != null && urlTitle != "") {
	    	var docId = currentItem.attr("data-docid");
			var documentId = docId;
			urlTitle = urlTitle.replace(/[" !！「」\【\】\《\》\〔\〕\［\］\[\]\【\】\〖\〗\、\＼\\｜\『\』\.\‧\＄\："&$#%(（）)*+,./:;<=>?？@[\\\]^`{|│｜}~–—]+/g, "-");
			urlTitle = urlTitle.replace(/^-+/, '').replace(/-+$/, '');
			history.pushState(null, null, '/article/'+documentId+'/'+urlTitle);
	    }
	}
});
