	function listOutPageRightWithPhoto(data){
			var str="";
		    for(i=0;i<data.length;i++){
    		if(data[i][0]=="autoList" && data[i][1]!=null){
    			autoList = data[i][1];
    			for(i=0;i<autoList.items.length;i++){
    				if(autoList.items[i].hasOwnProperty('standardMedia')){
							var autoListImageName = autoList.items[i].standardMedia.mediaThumbnail.items[0].small;
							var autoListImageSplit = autoListImageName.split('.');
							if(autoListImageSplit!=null && autoListImageSplit.length>0){
								var finalAutoListImageName = autoListImageSplit[0] + "_135." + autoListImageSplit[1];
								var documentId= autoList.items[i].standardDocumentId;
								var imageId = Math.floor(documentId/5000);
								var imageUrl = "https://resource01.ulifestyle.com.hk/res/v3/image/content/"+imageId*5000+"/"+documentId+"/"+finalAutoListImageName+"";
							}
					}else{
						var imageUrl="";
					}	
    				str+="<button type='button' class='list-group-item' onclick='location.href=\"/article/"+autoList.items[i].standardDocumentId+"/"+encodeURI(getUrlHeadline(getStandardDocumentHeadline(autoList.items[i].headlines.items)))+"\";'>";
					str+="<img src='/images/loader.gif' data-src='"+imageUrl+"' class='list-thumb'>"+getStandardDocumentHeadline(autoList.items[i].headlines.items)+"</button>";
 				}
 				}else if(data[i][0]=="manualList" && data[i][1]!=null){
    			manualList = data[i][1];
    			for(i=0;i<manualList.manualItems.items.length;i++){
    				var type = manualList.manualItems.items[i].type;
        			if(manualList.manualItems.items[i].hasOwnProperty('manualItemImages')){
							//var manualListImageName =manualList.manualItems.items[i].manualItemImages.items[0].large;
							//var manualListImageSplit = manualListImageName.split('.');
							var imageUrl = manualList.manualItems.items[i].manualItemImages.items[0].large;
							//if(manualListImageSplit!=null && manualListImageSplit.length>0){
								//var finalManualListImageName = manualListImageSplit[0] + "_135." + manualListImageSplit[1];
								//var documentId= manualList.id;
								//var imageId = Math.floor(documentId/5000);
								//var imageUrl = "https://resource01-proxy.ulifestyle.com.hk/res/v3/image/manual-list/highlight/"+imageId*5000+"/"+documentId+"/"+finalManualListImageName+"";
							//}
							
					}else{
						var imageUrl="";
					}
					if(type=="video"){
						str+="<button type='button' class='list-group-item' onclick='location.href=\"https://www.ulifestyle.com.hk/video/"+manualList.manualItems.items[i].id+"\";'>";	
    				}else{
    					str+="<button type='button' class='list-group-item' onclick='location.href=\"/article/"+manualList.manualItems.items[i].id+"/"+encodeURI(getUrlHeadline(manualList.manualItems.items[i].headline))+"\";'>";
    			
    				}
					str+="<img src='/images/loader.gif' data-src='"+imageUrl+"' class='list-thumb'>"+manualList.manualItems.items[i].headline+"</button>";
 				}			
    		}
    	}
    	return str;
	}
	
	function getStandardDocumentHeadline(headlinesItem){
		for(j=0;j<headlinesItem.length;j++){
			if(headlinesItem[j].type=="main"){
				return headlinesItem[j].name;
			}
		}
	}
