<script>
	function getUrlHeadline(title) {
	  let urlHeadline = title.replace(/[\s~`！!@#$%^&*()_+\-={[}\]|\\:;：【】《》「」│｜（）.‧＄"'<,>.、。“”?？/]+/g, "-");
	  urlHeadline = urlHeadline.replace(/^-/, "");
	  urlHeadline = urlHeadline.replace(/-$/, "");
	  return urlHeadline;
	}	  
          //getPageRight("hotChart","/getLastestPageRight/hotChart", $("#hotChart"));        
          getPageRight("news","/getLastestPageRight/latestNews", $("#latestNews"));  
          getPageRight("editorRecommand","/getLastestPageRight/editorRecommand", $("#editorRecommand"));    
          	getPageRight("special","/getLastestPageRight/special", $("#special"));
        
  function getPageRight(category, url, element){
    jQuery.ajax({
      type:"get",
      async:true,
      url:url,
      contentType:"application/json; charset=UTF-8",
      cache: true,
      headers: {
     	'Cache-Control': 'max-age=600, public'
	  },
      dataType:"json",
      success: function(data,textStatus,errorThrown){
        	listLayout(category, data, element);   	
      },
      error: function(data,textStatus,errorThrown){
        	console.log(data);
            console.log(textStatus);
            console.log(errorThrown);
      },
    });
  }
              
  function listLayout(category, data, element){

  	var str="";
  	
  	switch(category) {
    case "hotChart":
    	//console.log(data.items);
        //for(i=0;i<data.items.length;i++){
    	//	str+="<li type='button' class='list-group-item'><a href='#'>"+data.items.items[i].headline+"</a></li>";
 		//}    
        break;
    case "editorRecommand":
