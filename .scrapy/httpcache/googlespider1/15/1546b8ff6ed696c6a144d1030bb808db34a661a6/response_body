                if (e.width > 850) {
                    e.style.width = '850px';
                }
            }
        });
        (function () {
            document.querySelectorAll('.post-content p').forEach(item => {
                if (item.textContent && item.textContent[0] === '▲') {
                    item.style.paddingTop = '0'
                    item.style.marginTop = '-7px'
                }
            })
        })();
    </script>
