    $(window).load(function(){
        var nub = $('.big-text').text().length;
        WebFont.load({
            custom: {
                families: ['geometos_roundedregular'],
                urls: ['http://ideas.site/wp-content/themes/ideas/fonts/fonts.css']
            },
            active:function() {
                $(".big-text").slabText({
                    minCharsPerLine : nub
                });
            },
        });

