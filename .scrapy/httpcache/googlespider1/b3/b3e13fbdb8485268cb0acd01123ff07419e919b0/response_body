<script>
            var trackSpeechify = function (trackingEvent) {
                console.log('speechify tracking');
                digitalData = {
                    page: {
                        pageInfo: {
                            [trackingEvent]: window.location.href.toLowerCase()
                        }
                    }
                };
                _satellite.track(trackingEvent);
            };

            import(
                "/Assets/IMF/js/speechifyapi.min.js"
            ).then(async (speechifyWidget) => {
                // this parent element for your article or listenable content
                const articleRootElement = document.querySelector(".read-column");
                const voiceLangMap =
                {
                    'en': 'John',
'ar': 'Fatima',
'es': 'Javier',
'fr': 'Louise',
'ja': 'Sakura',
'ru': 'Ivan',
'zh': 'Yarong',
'pt': 'Benicio',
                };

                var selectedVoice = voiceLangMap['zh'];

                //Add spechify node to DOM
                var speechifyNode = document.createElement('div');
                speechifyNode.classList.add('container');
                speechifyNode.classList.add('custom-container');
                var speechifyRoot = document.createElement('div');
                speechifyRoot.id = 'speechify-root';
                speechifyNode.appendChild(speechifyRoot);

                const headerElement = document.querySelector(".intro-text");

                if (headerElement) {
                    headerElement.after(speechifyNode);
                } else {
                    const articleEl = document.querySelector(".read-column");
                    articleEl.prepend(speechifyNode);
                }


                const widget = speechifyWidget.makeSpeechifyExperience({
                    rootElement: articleRootElement,
                    useSpeechifyRoot: true,
                    visibility: {
                        showWidget: false,
                        showWidgetOnPlay: true,
                    },
                    defaultVoice: selectedVoice,
                    ignoreElements: (element) =>
                        element.tagName === "TABLE" ||
                        element.classList.contains("block-quote") ||
                        element.classList.contains("tweetable") ||
                        element.classList.contains("fd-author") ||
                        element.classList.contains("footnote") ||
                        element.classList.contains("reading-time") ||
                        element.classList.contains("intro-text") ||
                        element.classList.contains("article-belt") ||
                        element.classList.contains("pdf-download"),
                });
                await widget.mount();

                widget.addEventListener((event, playerState) => {
                    
                    if (event.type === 'play') {
                            trackSpeechify("speechifyPlayClick");
                    }
                    else if (event.type === 'pause') {
                    }
                    else if (event.type === 'resume') {
                    }
                    else if (event.type === 'skipped-forward') {
                    }
                    else if (event.type === 'skipped-backward') {
                    }
                });
            });
</script>
