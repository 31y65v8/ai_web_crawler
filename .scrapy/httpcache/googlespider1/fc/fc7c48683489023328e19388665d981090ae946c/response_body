<script>
  //入会申请
  $(".apply").click(function () {
    $("#mymodal-data .modal-title").text('入会申请');
    $("#mymodal-data input[name='type']").val(2);
    $("#mymodal-data .contentPart").hide();
  })
  //需求征集
  $(".need").click(function () {
    $("#mymodal-data .modal-title").text('需求征集');
    $("#mymodal-data input[name='type']").val(1);
    $("#mymodal-data .contentPart").show();
    $("#mymodal-data .contentPart font").text('需求内容');
    $("#mymodal-data textarea").attr('placeholder','请填写需求内容');
  })
  //我要报名
  $(".signup").click(function () {
    $("#mymodal-data .modal-title").text('需求征集');
    $("#mymodal-data input[name='type']").val(1);
    $("#mymodal-data .contentPart").show();
    $("#mymodal-data .contentPart font").text('需求内容');
    $("#mymodal-data textarea").attr('placeholder','请填写需求内容');
  })
  //产业报告
  $(".report").click(function () {
    $("#mymodal-data .modal-title").text('产业报告');
    $("#mymodal-data input[name='type']").val(1);
    $("#mymodal-data .contentPart").show();
    $("#mymodal-data .contentPart font").text('报告内容');
    $("#mymodal-data textarea").attr('placeholder','请填写报告内容');
  })
  //提交
  $(".submit").click(function () {
    var name = $("input[name='name']").val();
    if(!name){
      layer.msg('请输入联系人');
      return false;
    }
    var mobile = $("input[name='tel']").val();
    if(!mobile){
      layer.msg('请输入联系电话');
      return false;
    }
    if(/^1[0-9]{10}$/.exec(mobile) || /^(5|6|8|9)[0-9]{7}$/.exec(mobile)){
    }else{
      layer.msg('请输入正确的联系电话');
      return false;
    }
    var company = $("input[name='company']").val();
    if(!company){
      layer.msg('请输入公司名称');
      return false;
    }
    var email = $("input[name='email']").val();
    if(!email){
      layer.msg('请输入公司邮箱');
      return false;
    }
    var content = $("textarea[name='content']").val();
    if($("textarea[name='content']").is(":visible")) {
      if (!content) {
        layer.msg('请输入留言内容');
        return false;
      }
    }
    var type = $("input[name='type']").val();
    var sendUrl = "/report/addmessage.html";
    var index = layer.load(0, {shade: [0.1,'#fff']});
    $.post(sendUrl, {type: type,name: name,tel: mobile,company: company,email: email,content: content}, function (data) {
      if (data.status != 1) {
        layer.msg(data.info);
        return false;
      } else {

        $('#mymodal-data').modal('hide');
        layer.msg(data.info);
        $("input[name='type']").val('');
        $("input[name='name']").val('');
        $("input[name='tel']").val('');
        $("input[name='company']").val('');
        $("input[name='email']").val('');
        $("textarea[name='content']").val('');

      }
      layer.close(index);
    }, 'json');
  })
</script>




<script type="text/javascript">

  /*$(".download").click(function () {
    var url = $(this).data('url');
    var name = $(this).attr('download');
    download(url, name);

  })*/

  /**
   * 下载
   * @param  {String} url 目标文件地址
   * @param  {String} filename 想要保存的文件名称
   */
  function download(url, filename) {
    getBlob(url, function (blob) {
      saveAs(blob, filename);
    });
  };
  /**
   * 获取 blob
   * @param  {String} url 目标文件地址
   * @return {cb}
   */
  function getBlob(url, cb) {
    var xhr = new XMLHttpRequest();
    xhr.open('GET', url, true);
    xhr.responseType = 'blob';
    xhr.onload = function () {
      if (xhr.status === 200) {
        cb(xhr.response);
      }
    };
    xhr.send();
  }

  /**
   * 保存
   * @param  {Blob} blob
   * @param  {String} filename 想要保存的文件名称
   */
  function saveAs(blob, filename) {
    if (window.navigator.msSaveOrOpenBlob) {
      navigator.msSaveBlob(blob, filename);
    } else {
      var a = document.createElement('a');
      var body = document.querySelector('body');
      a.href = window.URL.createObjectURL(blob);
      a.download = filename;
      a.style.display = 'none';
      body.appendChild(a);
      a.click();
      body.removeChild(a);
      window.URL.revokeObjectURL(a.href);
    };

  }
</script></body></html>