M.addModelFns({
	
	'js_manage':{
		click:function(){
			if ( $(".layermenu").is(":hidden") ) {
				$(".layermenu").css({
					'top':$(this).offset().top+26+'px',
					'left':$(this).offset().left-150+16+'px'
				}).show();
			}else{
				$(".layermenu").hide();
			};
		}
	}
});

var deleteArticle = function(article_id) {
	ui.confirmBox('提示','是否删除此文章?',function(){
		$.post(U('index/Article/doDelArticle'),{article_id:article_id},function(res){
			if (res.status == 1) {
				ui.success('删除成功');
				setTimeout(function(){
					location.href = U('index/Article/index');
				},1500);
			}else{
				ui.error(res.info);
			}
		},'json');
	});
}

var recommendArticle = function(article_id,status) {
	var tips = status == 1? '是否设置为每日精选':'是否取消每日精选？';
	ui.confirmBox('提示',tips,function(){
		$.post(U('index/Article/recommendOperate'), {article_id:article_id,status:status},function(res){
			if (res.status == 1) {
				ui.success('操作成功');
				setTimeout(function(){
					location.reload();
				},1500);
			}else{
				ui.error(res.info);
			}
		},'json');
	});
}
</script>
