                $(".AppBtn").click(function () {
                    window.sessionStorage.setItem("isPc", "false")
                    window.location.reload()
                })
                $(".AppBtn2").click(function () {
                    window.sessionStorage.setItem("isPc", "false")
                    window.location.reload()
                })
            })
