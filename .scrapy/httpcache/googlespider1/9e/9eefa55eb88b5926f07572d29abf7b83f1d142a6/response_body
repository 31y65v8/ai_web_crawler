 contentType: "application/x-www-form-urlencoded",  //请求格式
 dataType: 'json',
 success: function(res) {
  
  //判断无附件图使用logo
  var imgUrl = '';
console.log(imgUrl);
  if(imgUrl == undefined || imgUrl == null || imgUrl == '') {
   //没有附件默认logo
   imgUrl = 'https://www.cssn.cn/images/skweixinlog.jpg';
  }
 console.log(imgUrl);
