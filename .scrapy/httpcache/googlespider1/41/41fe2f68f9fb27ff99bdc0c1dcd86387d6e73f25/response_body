<!-- Added for Adobe analytics implementation ADCMS-5834
<script type="text/javascript">

    adobeDataLayer.push({
        "event": "linkClick",
        "web": {
            "webPageDetails": {
                "URL": document.URL,
                "name": "home"
            },
            "webInteraction": {
                "linkClick":"event",
