<script>
    var currentContId = 21946870
    var relationContsUrl = 'https://cache.thepaper.cn/contentapi/article/recommends/'
    $(document).ready(function () {
        // 相关推荐
        relationConts(relationContsUrl, currentContId)
    });

    /*相关推荐*/
    function relationConts(url, contId) {
        console.log("relationConts:", url, contId);
        $.ajax({
            type: "GET",
            url: url + contId,
            async: true,
            dataType: "json",
            success: function (result) {
                console.log("result:", result);
                const data = result.data;
                data.forEach(function(value, key, iterable) {
                    console.log("data forEach:", value, key, iterable);
                    var countNum = 0;
                    if(key < 3){
                        countNum ++;
                        const lihtml = '<li class="onepic">' +
                            '<a class="article_link" href="//m.thepaper.cn/wifiKey_detail.jsp?contid=' + value.contId + '&from=wifiKey" data-id="' + countNum + '">' +
                            '<h3>' + value.name + '</h3>' +
                            '</a>' +
                            '</li>';
                        $(".relate-news-list").append(lihtml);
                    }
                });
                const relCnt = data.length;
                const rNews = document.getElementsByClassName("relate-news");
                if (relCnt == 0 && rNews != null) {
                    rNews[0].remove()
                }
            },
            error: function () {
                console.log("失败！");
            }
        });
    }
</script>
</body></html>