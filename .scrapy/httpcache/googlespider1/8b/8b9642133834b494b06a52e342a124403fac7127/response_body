    <script>
        ;(function($){
            $('.subscribe').on('click',function(){
                var $btn = $(this);
                var postData = {_token: '9HUfUwB7opXlsLwDwmW3CNNTITtjG6ArSVr41TT6'}
                var email=$(".email").val();
                if(email==''){
                    $btn.parents('.input-group').addClass('has-error');
                }else{
                    postData['email'] = email;
                    postData['status'] = 1;
                    $btn.parents('.input-group').removeClass('has-error');
                }
                if(email){
                    $.post('/subscribe',postData,function(result){
                        if(result.status){
                            layer.msg(result.tip,{icon: 6});
                        }else{
                            layer.msg(result.tip,{icon: 5});
                        }
                    });
                }
            });
        })(jQuery);
    </script>
