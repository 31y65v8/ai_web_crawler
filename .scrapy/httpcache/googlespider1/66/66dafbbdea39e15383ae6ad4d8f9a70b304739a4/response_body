	var box = document.getElementById('videoDiv');
	var srcPath;
	var emb = document.getElementById("videoInfo");
	if(emb!=null){
		var src_emb = emb.src;
		src_emb =src_emb.substring(7);
		src_emb=src_emb.replace(new RegExp("http:/","gm"),"http://");
		srcPath = "http://"+src_emb;
	}
	var str = '<embed id="videoInfo" src="'+srcPath+'" width="550px" height="309px" allowFullScreen="true" allowScriptAccess="always" type="application/x-shockwave-flash"/>';
	box.innerHTML += str;
</script>
		  </div>
	
