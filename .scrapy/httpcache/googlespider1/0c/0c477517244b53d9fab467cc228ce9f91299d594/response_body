                        }
                    });
                    wx.updateTimelineShareData({
                        title: pTitle, // 分享标题
                        link: pLink, // 分享链接，该链接域名或路径必须与当前页面对应的公众号JS安全域名一致
                        imgUrl: pCover, // 分享图标
                        success: function () {
                            // alert('分享朋友圈成功');
                        }
                    });
                    wx.onMenuShareTimeline({
                        title: pTitle, // 分享标题
                        link: pLink, // 分享链接，该链接域名或路径必须与当前页面对应的公众号JS安全域名一致
                        imgUrl: pCover, // 分享图标
                        success: function () {
                            // alert('分享朋友圈成功(即将废弃)');
                        }
                    });
                    wx.onMenuShareAppMessage({
                        title: pTitle, // 分享标题
                        desc: pDesc, // 分享描述
                        link: pLink, // 分享链接，该链接域名或路径必须与当前页面对应的公众号JS安全域名一致
