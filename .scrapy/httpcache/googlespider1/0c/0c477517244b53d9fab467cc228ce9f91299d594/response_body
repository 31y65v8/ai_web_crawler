                document.getElementById("example_video_1").style.display = "block";

                var player = VideoJS(document.getElementById('example_video_1'), {
                    poster: '',

                })

            });
        } else {

            $(".video-sj").css("display", "none");
            document.getElementById("example_video_1").style.display = "none";
            $(".video-sj").addClass("heade")
            $(".video-js").addClass("heade")
            $("#example_video_1").addClass("heade")
        }


    </script>


