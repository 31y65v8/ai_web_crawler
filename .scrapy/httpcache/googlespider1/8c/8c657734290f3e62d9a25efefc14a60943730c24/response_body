					<span class="close-wrap"> <span class="close-line close-line1"></span> <span class="close-line close-line2"></span> </span>				</a><!--/ocm-effect-wrap--><script src="https://cdnjs.cloudflare.com/ajax/libs/bluebird/3.5.5/bluebird.core.min.js"></script>

<script>
(function ($) {
    var query = 'blog_type=list_style';

    var $viewSelector = $(".view_icon > i");
    if ($viewSelector.size() !== 2) {
        return;
    }

    var normalizeLink = function (isListStyle, url) {
        var hasListStyle = url.indexOf(query) !== -1;
        if (isListStyle && !hasListStyle) {
            var joiner = '';
            if (url.indexOf('?') !== -1) {
                if (url.charAt(url.length - 1) !== '?') {
                    joiner = '&';
                }
            } else {
                joiner = '?';
            }
            return url + (joiner) + query;
        } else if (!isListStyle && hasListStyle) {
            // 만약 blog_type=list_style&s=1 같은 경우 뒤에 붙어 있는 & 까지 모두 지워줘야 한다.
            // 두번 호출 하면 그냥 해결
            return url.replace(query + '&', '').replace(query, '');
        }
        return null;
    };
    var updateLink = function (isListStyle, element) {
        var href = normalizeLink(isListStyle, $(element).attr('href'));
        if (href != null) {
            $(element).attr('href', href);
        }
    };

    var $tabAreaAnchors = $('.tabArea > .wpb_wrapper > .tab > li > a');
    var $paginationAnchors = $('#pagination a');
    var updateLinks = function (isListStyle) {
        $tabAreaAnchors.each(function () {
            updateLink(isListStyle, this);
        });
        $paginationAnchors.each(function () {
            updateLink(isListStyle, this);
        });
    };

    var initialListStyle = location.search.indexOf(query) !== -1;
    // 토글 아이콘 & style
    if (initialListStyle) {
        $('.blog_type').addClass('list_style');
        $viewSelector.removeClass('on').filter('.list').addClass('on');
        updateLinks(true);
    }

    $viewSelector.click(function (e) {
        // init.js 에서 $(".view_icon>i").on("click",function(){ 어쩌고 삭제 할것
        e.stopImmediatePropagation();

        var url = normalizeLink($(this).hasClass('list'), location.toString());
        if (url == null) {
            return;
        }

        window.location.replace(url);
    });
})(jQuery);
</script>

<script>
(function($) {
    $.fn.asGa = function () {
        return this.click(function () {
            var data = $(this).data();
            var ga = window['__gaTracker'];
            if (!ga) {
                console.error('ga is missing');
                return;
            }
            ga('send', 'event', data.gaCategory, data.gaAction, data.gaLabel);
        });
    };
    $(function () {
        $('.-as-ga').asGa();
    });
})(jQuery);
</script>

<script src="https://cdnjs.cloudflare.com/ajax/libs/downloadjs/1.4.8/download.js"></script>
<script>
jQuery(function ($) {
    $.fn.asDownload = function () {
        return this.click(function (e) {
            e.preventDefault();

            var $this = $(this);
            var data = $this.data();
            var href = $this.attr('href');
            var downloadUrl = href || data.downloadUrl;
            if (!downloadUrl) {
                alert('Cannot find the download URL');
                return;
            }

            var splits = downloadUrl.split('/');
            var fileName = splits[splits.length - 1] || 'download';
            if (!fileName) {
                alert('Cannot find a correct file name to download.');
                return;
            }

            if (!window.fetch) {
                window.open(downloadUrl);
                return;
            }

            fetch(downloadUrl, {mode: 'cors', cache: 'no-cache'})
                .then(function (res) {
                    if (res.ok) {
                        return res.blob();
                    }
                    throw new Error('Please try again.');
                })
                .then(function (blob) {
                    download(blob, fileName);
                });
        });
    };

    $('.-as-download-').asDownload();
});
</script>

<script src="https://cdnjs.cloudflare.com/ajax/libs/clipboard-polyfill/2.8.6/clipboard-polyfill.js"></script>
<script>
jQuery(function ($) {
    $.fn.asClipboard = function () {
        return this.click(function (e) {
            e.preventDefault();

            var $this = $(this);
            var data = $this.data();
            var clipboardData = $this.attr('href') || data.clipboardData;
            if (!clipboardData || clipboardData === '#') {
                clipboardData =
                    location.protocol + '//' +
                    location.hostname +
                    (location.port ? ":" + location.port : "") +
                    location.pathname +
                    (location.search ? location.search : "");
            }
            var clipboardMessage = data.clipboardMessage || 'URL Copied!';
            clipboard
                .writeText(clipboardData)
                .then(function () {
                    alert(clipboardMessage);
                });
        });
    };

    $('.-as-clipboard').asClipboard();
    // salient share 기능중 fa-link 에 추가
    $('.link-share.nectar-sharing:has(> .fa.fa-link)').asClipboard();
});
</script>

// <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.qrcode/1.0/jquery.qrcode.min.js"></script>
// wechat qr 현재 URL 로 변경
<script>
jQuery(function ($) {
    var currentUrl =
        location.protocol + '//' +
        location.hostname +
        (location.port ? ":" + location.port : "") +
        location.pathname +
        (location.search ? location.search : "");

    $(function () {
        $('.wechat_qr')
            .empty()
            .qrcode({text: currentUrl})
            .children()
            .css('width', '100%');
    });
});
</script>

// https://github.com/mkdynamic/jquery-popupwindow
/*!
* Display popup window.
*
* Requires: jQuery v1.3.2
*/
<script>
(function ($) {
    var defaults = {
        center: "screen", //true, screen || parent || undefined, null, "", false
        createNew: true,
        height: 500,
        left: 0,
        location: false,
        menubar: false,
        name: null,
        onUnload: null,
        resizable: false,
        scrollbars: false, // os x always adds scrollbars
        status: false,
        toolbar: false,
        top: 0,
        width: 500
    };

    $.popupWindow = function (url, opts) {
        var options = $.extend({}, defaults, opts);

        // center the window
        if (options.center === "parent") {
            options.top = window.screenY + Math.round(($(window).height() - options.height) / 2);
            options.left = window.screenX + Math.round(($(window).width() - options.width) / 2);
        } else if (options.center === true || options.center === "screen") {
            // 50px is a rough estimate for the height of the chrome above the
            // document area

            // take into account the current monitor the browser is on
            // this works in Firefox, Chrome, but in IE there is a bug
            // https://connect.microsoft.com/IE/feedback/details/856470/ie11-javascript-screen-height-still-gives-wrong-value-on-secondary-monitor

            // IE reports the primary monitor resolution. So, if you have multiple monitors IE will
            // ALWAYS return the resolution of the primary monitor. This is a bug, and there is an
            // open ticket with IE for it. In chrome and firefox it returns the monitor that the
            // browser is currently located on. If the browser spans multiple monitors, whichever
            // monitor the browser has the most real estate on, is the monitor it returns the size for.

            // What this means to the end users:
            // If they have multiple monitors, and their multiple monitors have different resolutions,
            // and they use internet explorer, and the browser is currently located on a secondary
            // monitor, the centering will not be perfect as it will be based on the primary monitors
            // resolution. As you can tell this is pretty edge case.
            var screenLeft = (typeof window.screenLeft !== 'undefined') ? window.screenLeft : screen.left;

            options.top = ((screen.height - options.height) / 2) - 50;
            options.left = screenLeft + (screen.width - options.width) / 2;
        }

        // params
        var params = [];
        params.push('location=' + (options.location ? 'yes' : 'no'));
        params.push('menubar=' + (options.menubar ? 'yes' : 'no'));
        params.push('toolbar=' + (options.toolbar ? 'yes' : 'no'));
        params.push('scrollbars=' + (options.scrollbars ? 'yes' : 'no'));
        params.push('status=' + (options.status ? 'yes' : 'no'));
        params.push('resizable=' + (options.resizable ? 'yes' : 'no'));
        params.push('height=' + options.height);
        params.push('width=' + options.width);
        params.push('left=' + options.left);
        params.push('top=' + options.top);

        // open window
        var random = new Date().getTime();
        var name = options.name || (options.createNew ? 'popup_window_' + random : 'popup_window');
        var win = window.open(url, name, params.join(','));

        // unload handler
        if (options.onUnload && typeof options.onUnload === 'function') {
            var unloadInterval = setInterval(function () {
                if (!win || win.closed) {
                    clearInterval(unloadInterval);
                    options.onUnload();
                }
            }, 50);
        }

        // focus window
        if (win && win.focus) {
            win.focus();
        }

        // return handle to window
        return win;
    };
})(jQuery);
</script>

// weibo show
<script>
jQuery(function ($) {
    var currentUrl =
        location.protocol + '//' +
        location.hostname +
        (location.port ? ":" + location.port : "") +
        location.pathname +
        (location.search ? location.search : "");

    var weiboUrl = 'http://service.weibo.com/share/share.php?language=zh_cn&title=' + document.title + '&url=' + currentUrl;

    $(function () {
        $('.weibo-share').click(function (e) {
            e.preventDefault();
            $.popupWindow(weiboUrl, {width: 650, height: 332});
        });
    });
});
</script>


