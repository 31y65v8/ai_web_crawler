/*************copy button************/   
$(document).on("click", '.copybtn', function(event) { 
    var $temp = $("<input>");
    $("body").append($temp);
    $temp.val(window.location.href).select();
    document.execCommand("copy");
    $temp.remove();
    
    
    $('.copied-text').fadeIn().delay(1000).fadeOut('slow'); 
});  
