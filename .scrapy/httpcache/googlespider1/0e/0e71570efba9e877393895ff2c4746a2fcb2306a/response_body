$('.opennewwindow a').click(function (event) {
        event.preventDefault();
        var strWindowFeatures = "height="+screen.height+",width="+screen.width;
        var URL = $(this).attr('href');
        var win = window.open(URL, "_blank", strWindowFeatures);
});
            
        });
